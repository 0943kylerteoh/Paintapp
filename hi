      rect(155, 5, 20, 20, 5)
    }
    else{
      stroke(220)
      strokeWeight(2)
      fill("turquoise")
      rect(155, 5, 20, 20, 5)
    }

    if (colourConfirm == "skyblue"){
      stroke(0)
      strokeWeight(2)
      fill("skyblue")
      rect(5, 30, 20, 20, 5)
    }
    else{
      stroke(220)
      strokeWeight(2)
      fill("skyblue")
      rect(5, 30, 20, 20, 5)
    }

    if (colourConfirm == "blue"){
      stroke(0)
      strokeWeight(2)
      fill("blue")
      rect(30, 30, 20, 20, 5)
    }
    else{
      stroke(220)
      strokeWeight(2)
      fill("blue")
      rect(30, 30, 20, 20, 5)
    }

    if (colourConfirm == "navy"){
      stroke(0)
