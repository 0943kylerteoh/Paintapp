      fill("orange")
      rect(55, 5, 20, 20, 5)
    }
    else{
      stroke(220)
      strokeWeight(2)
      fill("orange")
      rect(55, 5, 20, 20, 5)
    }

    if (colourConfirm == "yellow"){
      stroke(0)
      strokeWeight(2)
      fill("yellow")
      rect(80, 5, 20, 20, 5)
    }
    else {
      stroke(220)
      strokeWeight(2)
      fill("yellow")
      rect(80, 5, 20, 20, 5)
    }

    if (colourConfirm == "lightgreen"){
      stroke(0)
      strokeWeight(2)
      fill("lightgreen")
      rect(105, 5, 20, 20, 5)
    }
    else{
      stroke(220)
      strokeWeight(2)
      fill("lightgreen")
      rect(105, 5, 20, 20, 5)
    }

    if (colourConfirm == "green"){
      stroke(0)
